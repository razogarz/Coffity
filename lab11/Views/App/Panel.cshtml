@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Css/style.css")" asp-append-version="true" />

</head>
<body>
<div>
    @if (ViewBag.login != null && ViewBag.password != null)
    {
        <h2>Panel</h2>

        <h3>
            Logged as: @ViewBag.login
        </h3>
        
        <a href="/">Home</a>
        <br/>
        <br/>
        
        
        
                                                    
        <form asp-controller="AppController" asp-action="EditCoffees" action="/editCoffees" method="get">
            <div>
                <button type="submit">Edytuj kawki</button>
            </div>
        </form>

        <form asp-controller="AppController" asp-action="HandleLogoutForm" action="/logout" method="post">
            <div>
                <button type="submit">Wyloguj</button>
            </div>
        </form>

    }
    
</div>
</body>
</html>